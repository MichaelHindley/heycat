{
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "TodoWrite",
        "hooks": [
          {
            "type": "command",
            "command": "bun .claude/skills/tcr/tcr.ts hook-todo-complete"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun .claude/skills/tcr/tcr.ts hook-pre-commit"
          }
        ]
      }
    ]
  }
}
